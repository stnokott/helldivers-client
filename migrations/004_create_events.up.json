[
	{
		"create": "events",
		"validator": {
			"$and": [
				{
					"$jsonSchema": {
						"bsonType": "object",
						"title": "events",
						"description": "An ongoing event on a Planet.",
						"required": [
							"_id",
							"type",
							"faction",
							"max_health",
							"start_time",
							"end_time"
						],
						"additionalProperties": false,
						"properties": {
							"_id": {
								"bsonType": "int",
								"description": "The unique identifier of this event."
							},
							"type": {
								"bsonType": "int",
								"description": "The type of event."
							},
							"faction": {
								"bsonType": "string",
								"description": "The faction that initiated the event."
							},
							"max_health": {
								"bsonType": "int",
								"description": "The maximum health of the Event at the time of snapshot."
							},
							"start_time": {
								"bsonType": "timestamp",
								"description": "When the event started."
							},
							"end_time": {
								"bsonType": "timestamp",
								"description": "When the event will end."
							}
						}
					}
				},
				{
					"$expr": {
						"$gt": [
							"$end_time",
							"$start_time"
						]
					}
				}
			]
		},
		"validationLevel": "strict",
		"validationAction": "error"
	}
]
