[
	{
		"create": "wars",
		"validator": {
			"$and": [
				{
					"$jsonSchema": {
						"bsonType": "object",
						"title": "wars",
						"description": "Global information of the ongoing war.",
						"required": [
							"_id",
							"start_time",
							"end_time",
							"factions"
						],
						"additionalProperties": false,
						"properties": {
							"_id": {
								"bsonType": "int"
							},
							"start_time": {
								"bsonType": "timestamp",
								"description": "When this war was started."
							},
							"end_time": {
								"bsonType": "timestamp",
								"description": "When this war will end (or has ended)."
							},
							"factions": {
								"bsonType": "array",
								"description": "A list of factions currently involved in the war.",
								"uniqueItems": true,
								"items": {
									"bsonType": "string"
								}
							}
						}
					}
				},
				{
					"$expr": {
						"$gt": [
							"$end_time",
							"$start_time"
						]
					}
				}
			]
		},
		"validationLevel": "strict",
		"validationAction": "error"
	}
]
