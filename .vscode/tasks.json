{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run integration tests",
			"type": "shell",
			"command": "docker",
			"options": {
				"env": {
					"COMPOSE_FILE": "${workspaceFolder}/build/test/docker-compose.yaml"
				}
			},
			"args": [
				"compose",
				"up",
				"--exit-code-from=app",
				"--attach=app",
				"--force-recreate"
			],
			"group": "test",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run tests locally",
			"command": "godotenv",
			"args": [
				"-f",
				"${workspaceFolder}/.env.test",
				"go",
				"test",
				"./..."
			],
			"group": "test",
		},
		{
			"label": "build snapshot",
			"type": "shell",
			"command": "goreleaser release --skip=publish --clean --snapshot --config=build/.goreleaser.yaml",
			"problemMatcher": "$go",
			"group": "build"
		},
		{
			"label": "sqlc generate",
			"type": "shell",
			"command": "sqlc generate",
			"problemMatcher": [],
			"group": "none",
			"icon": {
				"id": "wand"
			}
		}
	]
}
