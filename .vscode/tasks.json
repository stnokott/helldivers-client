{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run integration tests",
			"type": "shell",
			"command": "docker",
			"options": {
				"env": {
					"COMPOSE_FILE": "${workspaceFolder}/build/test/docker-compose.yaml"
				}
			},
			"args": [
				"compose",
				"up",
				"--build",
				"--exit-code-from=app",
				"--attach=app",
				"--force-recreate"
			],
			"group": "test",
			"problemMatcher": []
		},
		{
			"type": "go",
			"label": "Run DB unit tests locally",
			"command": "test",
			"args": [
				"${workspaceFolder}/internal/db"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "test",
		},
		{
			"label": "build snapshot",
			"type": "shell",
			"command": "goreleaser build --clean --snapshot --config=build/.goreleaser.yaml",
			"problemMatcher": "$go",
			"group": "build"
		}
	]
}
